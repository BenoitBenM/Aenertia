<robot name="mybot">

  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.2 0.2 0.1"/>
      </geometry>
    </visual>
  </link>

  <link name="laser_frame"> <!-- CHANGÉ ICI -->
    <visual>
      <geometry>
        <cylinder length="0.1" radius="0.05"/>
      </geometry>
    </visual>
  </link>

  <joint name="laser_joint" type="fixed">
    <parent link="base_link"/>
    <child link="laser_frame"/> <!-- CHANGÉ ICI AUSSI -->
    <origin xyz="0 0 0.1" rpy="0 0 0"/>
  </joint>

</robot>
